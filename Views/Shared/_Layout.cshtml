<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Agromarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Agromarket.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>

    <style>
        body {
            background-color: #f6fff6;
        }

        .navbar {
            background-color: #e6f4e6;
        }

        .navbar .navbar-brand,
        .navbar .nav-link,
        .dropdown-item {
            color: #145c2b !important;
        }

        .navbar .nav-link:hover,
        .dropdown-item:hover {
            background-color: #d4f1d4;
        }

        .btn-success, .btn-outline-success {
            background-color: #4CAF50;
            border-color: #4CAF50;
        }

        .btn-success:hover {
            background-color: #45a049;
        }

        .footer {
            background-color: #e6f4e6;
            color: #2f4f2f;
        }

        .table thead {
            background-color: #d1f7d1;
        }

        .nav-tabs .nav-link.active {
            background-color: #a7e6a7;
            color: #145c2b;
            font-weight: bold;
        }

        .nav-tabs .nav-link {
            color: #198754;
        }

        .badge.bg-success {
            background-color: #4CAF50 !important;
        }

        .badge.bg-warning {
            background-color: #ffeb99 !important;
            color: #4a3f00 !important;
        }

        .box-shadow {
            box-shadow: 0 4px 6px rgba(0,0,0,.1);
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Agromarket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li><a class="nav-link" asp-controller="Warehouse" asp-action="Catalog"><i class="fas fa-th"></i> Каталог</a></li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="mainNavDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bars"></i> Меню
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="mainNavDropdown">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Головна</a></li>
                            @if (User.IsInRole("admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="fas fa-cogs"></i> Адмін Панель</a></li>
                            }
                            @if (User.IsInRole("warehousemanager") || User.IsInRole("admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="ProductList"><i class="fas fa-list"></i> Список товарів</a></li>
                                <li><a class="dropdown-item" asp-controller="Warehouse" asp-action="Warehouse"><i class="fas fa-warehouse"></i> Складський облік</a></li>
                                <li><a class="dropdown-item" asp-controller="Warehouse" asp-action="StockHistory"><i class="fas fa-history"></i> Історія операцій</a></li>
                                <li><a class="dropdown-item" asp-controller="DemandForecast" asp-action="Index"><i class="fas fa-chart-bar"></i> Прогноз поставок</a></li>
                            }
                            @if (User.IsInRole("admin") || User.IsInRole("clientmanager"))
                            {
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="OrderList"><i class="fas fa-box"></i> Замовлення</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action=""><i class="fas fa-chart-line"></i> Звіти</a></li>
                            }
                        </ul>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (User.IsInRole("client") || User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Кошик
                            </a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span id="notificationIndicator" class="position-absolute top-0 start-100 translate-middle p-1 bg-success border border-light rounded-circle d-none"></span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" id="notificationList">
                                <li class="dropdown-item text-muted">Завантаження...</li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="text-center">
                                    <button class="btn btn-sm btn-outline-secondary" id="markAsReadBtn">Помітити як прочитано</button>
                                </li>
                            </ul>
                        </li>
                    }
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer border-top py-3 mt-4">
    <div class="container d-flex justify-content-between">
        <span>&copy; 2025 - Agromarket</span>
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-success">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
