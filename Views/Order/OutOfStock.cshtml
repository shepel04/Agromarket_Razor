@model Agromarket.Models.OutOfStockViewModel

@{
    ViewData["Title"] = "Товар закінчився";
}

<div class="container mt-5">
    <div class="alert alert-warning text-center">
        <h2>😔 Весь наявний товар @Model.ProductName уже замовлено іншим покупцем.</h2>
        <p>На жаль, наразі цього товару немає на складі.</p>

        @if (Model.IsAvailableForPreorder)
        {
            <p class="mt-4">Але не хвилюйтесь! Ви можете <strong>передзамовити</strong> цей товар.</p>
            <a href="@Url.Action("Details", "Product", new { entryId = Model.ProductId })" class="btn btn-primary mt-3">
                Передзамовити @Model.ProductName
            </a>


        }
        else
        {
            <p class="mt-4">Будь ласка, оберіть інший товар у нашому каталозі.</p>
            <a href="@Url.Action("Catalog", "Warehouse")" class="btn btn-secondary mt-3">
                Перейти до каталогу
            </a>
        }
    </div>
</div>