@model IEnumerable<Agromarket.Models.Order>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
    <tr>
        <th>№</th>
        <th>Клієнт</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Сума</th>
        <th>Дата</th>
        <th>Статус</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        var isPreorder = order.OrderItems.Any(i => i.IsPreorder);
        <tr id="order-@order.Id">
            <td>
                @order.Id
                @if (isPreorder)
                {
                    <span class="badge bg-warning text-dark ms-1">Передзамовлення</span>
                }
            </td>
            <td>@order.CustomerName</td>
            <td>@order.CustomerEmail</td>
            <td>@order.CustomerPhone</td>
            <td>@order.TotalAmount.ToString("0.00") ₴</td>
            <td>@order.OrderDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
            <td>
                <form asp-action="UpdateStatus" method="post" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="id" value="@order.Id" />
                    <select name="newStatus" class="form-select form-select-sm w-auto">
                        @foreach (var s in Enum.GetValues(typeof(Agromarket.Models.OrderStatus)).Cast<Agromarket.Models.OrderStatus>())
                        {
                            <option value="@s" selected="@(order.Status == s ? "selected" : null)">
                                @s
                            </option>
                        }
                    </select>
                    <button type="submit" class="btn btn-outline-primary btn-sm">Змінити</button>
                </form>
            </td>
            <td>
                <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-warning btn-sm">
                    ✏️ Редагувати
                </a>
                <button class="btn btn-info btn-sm" onclick="toggleOrderDetails(@order.Id)">
                    📜 Деталі
                </button>
                <button onclick="deleteOrder(@order.Id)" class="btn btn-danger btn-sm">
                    🗑️
                </button>
            </td>
        </tr>

        <tr id="order-details-@order.Id" class="d-none">
            <td colspan="8">
                <div id="details-content-@order.Id" class="border p-3 rounded bg-light">
                    <p><strong>Завантаження...</strong></p>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
