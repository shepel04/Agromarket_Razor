<table class="table table-bordered table-striped">
    <thead class="table-light">
    <tr>
        <th>Товар</th>
        <th>Кількість</th>
        <th>Ціна</th>
        <th>Одиниця</th>
        <th>Сума</th>
        <th>Тип</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>
                @item.ProductName
                @if (item.IsPreorder)
                {
                    <span class="badge bg-warning text-dark ms-2">Передзамовлення</span>
                }
            </td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("0.00") грн</td>
            <td>@item.Unit</td>
            <td>@(item.Price * item.Quantity) грн</td>
            <td>
                @if (item.IsPreorder)
                {
                    <span class="text-warning">
                        Ймовірна доставка: @item.PreorderDate?.ToString("dd.MM.yyyy")
                    </span>
                }
                else
                {
                    <span class="text-success">Звичайне замовлення</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
