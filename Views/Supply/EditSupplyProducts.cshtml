@model Agromarket.Models.Supplier
@{
    ViewData["Title"] = "Редагування асортименту";
}

<div class="container mt-4">
    <h2 class="mb-4 text-success">✏️ Редагування асортименту: @Model.Name</h2>

    <form asp-action="EditSupplyProducts" method="post">
        <input type="hidden" name="SupplierId" value="@Model.Id" />

        <table class="table table-bordered table-striped">
            <thead class="table-success">
            <tr>
                <th>Товар</th>
                <th>Ціна (грн)</th>
                <th>Наявність</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.SupplyProducts.Count; i++)
            {
                <tr>
                    <td>
                        @Model.SupplyProducts[i].Product.Name
                        <input type="hidden" name="SupplyProducts[@i].Id" value="@Model.SupplyProducts[i].Id" />
                        <input type="hidden" name="SupplyProducts[@i].ProductId" value="@Model.SupplyProducts[i].ProductId" />
                    </td>
                    <td>
                        <input type="number" name="SupplyProducts[@i].Price" value="@Model.SupplyProducts[i].Price" step="0.01" class="form-control" />
                    </td>
                    <td class="text-center">
                        <input type="checkbox" name="SupplyProducts[@i].InStock" value="true" @(Model.SupplyProducts[i].InStock ? "checked" : "") />
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">💾 Зберегти</button>
            <a asp-action="Index" class="btn btn-secondary">← Назад</a>
        </div>
    </form>
</div>
